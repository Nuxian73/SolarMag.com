@*@model SolarMag.com.Models.Item.Categories*@

@{
    ViewBag.Title = "Créer article";
}

<h2>Créer</h2>


@using (Html.BeginForm(FormMethod.Get))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Arcticle</h4>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("Catégorie", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ValeurSelectionnee", EnumHelper.GetSelectList(typeof(SolarMag.com.Models.Item.Categories)),
                 "Choisir une catégorie", new { @class = "form-control", required = "required" })
                @*@Html.ValidationMessageFor(model => model, "", new { @class = "text-danger" })*@
            </div>
         </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Créer" class="btn btn-default" />
                </div>
            </div>
        </div>
}

<div>
    @Html.ActionLink("Retour à la liste", "Index", "Items")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
