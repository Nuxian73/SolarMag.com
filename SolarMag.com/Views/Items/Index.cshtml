@model IEnumerable<SolarMag.com.Models.Item>

@{
    ViewBag.Title = "Catalogue";
}

<h2>Catalogue</h2>

<p>
    @Html.ActionLink("Créer un nouvel article à ajouter au catalogue", "Create")
</p>

@using (Html.BeginForm())
{
    <p>
        Sélectionner une catégorie : @Html.DropDownList("CategorieList", EnumHelper.GetSelectList
                          (typeof(SolarMag.com.Models.Item.Categories)), "Toutes les catégories",
                          new { @class = "form-control" })
        <input type="submit" value="Filtrer" />
    </p>
}


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoReference)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fabricant)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Poids)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Garantie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prix)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoReference)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fabricant)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Poids)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Garantie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prix)
            </td>
            <td>
                @Html.ActionLink("Modifier", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Détails", "Details", new { id = item.Id }) |
                @Html.ActionLink("Supprimer", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
